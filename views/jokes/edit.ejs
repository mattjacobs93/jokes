<%- include('../partials/html-head') %>
</head>
<body class="normal-body">
  <%- include('../partials/nav') %>

  <div class="new-joke-div">
    <h1>Edit Joke:</h1>
    <hr>
    <form action="/jokes/<%=joke._id%>?_method=PUT" method="POST">
      <label for="title">
        <h4>Title:</h4> 
        <input type="text" name="title" placeholder="type title here..." value="<%=joke.title%>">
      </label>
      <br>
      <br>
      <label for="text"><h4>Please edit your joke here:</h4></label>
      <br>
      <textarea required name="text" placeholder="type joke here...">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=joke.text%>

      </textarea>
      <br>
      <br>
      <button type="submit" class="btn btn-info">submit</button>
    </form>
  </div>
  <%-include('../partials/footer.ejs')%>



